{
	/* See all the pre-defined configs here: https://www.npmjs.com/package/eslint-config-defaults */
	"root":true,    
	"ecmaFeatures": {
		"jsx": true
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"rules": {
		"no-console": 1,
		"no-cond-assign": 1,
		"no-constant-condition": 1,
		"no-debugger": 1,
		"no-dupe-keys": 2,
		"no-duplicate-case": 2,
		"no-ex-assign": 1,
		"no-extra-boolean-cast": 0,
		"no-func-assign": 1,
		"no-irregular-whitespace": 1,
		"no-obj-calls": 1,
		"no-sparse-arrays": 1,
		"no-unreachable": 1,		
		"use-isnan": 1,
		"eqeqeq": 1,
		"no-alert": 1,
		"no-eq-null": 1,
		"no-eval": 1,
		"no-loop-func": 1,
		"no-fallthrough": 1,
		"no-octal": 1,
		"no-redeclare": 1,
		"no-self-assign": 1,
		"no-delete-var": 2,
		"no-shadow": [
			1,
			{
				"builtinGlobals": false,
				"hoist": "functions",
				"allow": [ ]
			}
		],
		"no-unused-vars": 1,
		"no-undefined": 1,
		/* Styling */
		"brace-style": 1,
		"camelcase": 1,
		"indent": [ 1, "tab" ],
		"no-mixed-spaces-and-tabs": 2,
		"no-multiple-empty-lines": 1,
		"no-trailing-spaces": 1,
		"no-whitespace-before-property": 1,
		"object-curly-spacing": [ 1, "always" ],
		"one-var-declaration-per-line": 1,
		"operator-linebreak": 1,
		"quotes": 1,
		"space-before-function-paren": [1, "always"]
	}
}